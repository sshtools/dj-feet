<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<fx:root prefHeight="200.0" prefWidth="200.0" type="AnchorPane" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <VBox prefHeight="200.0" prefWidth="100.0" styleClass="spaced" BorderPane.alignment="CENTER">
               <children>
                  <HBox>
                     <children>
                        <Label prefWidth="110.0" styleClass="strong" text="%type" />
                        <Label fx:id="type" text="Monitor Type" />
                     </children>
                  </HBox>
                  <HBox layoutX="10.0" layoutY="10.0">
                     <children>
                        <Label prefWidth="110.0" styleClass="strong" text="%interfaceName" />
                        <TextField fx:id="interfaceName" editable="false" styleClass="selectable-label" />
                     </children>
                  </HBox>
                  <HBox fx:id="signalContainer" layoutX="10.0" layoutY="26.0">
                     <children>
                        <Label fx:id="memberLabel" prefWidth="110.0" styleClass="strong" text="Member:" />
                        <TextField fx:id="member" editable="false" styleClass="selectable-label" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </top>
         <center>
            <ListView fx:id="messages" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
   </children>
</fx:root>
